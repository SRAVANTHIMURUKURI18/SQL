28)
SELECT deptno
FROM emp
GROUP BY deptno
HAVING COUNT(empno) = 3;

29)
select sum(sal),dname
    from emp,dept
    where emp.deptno=dept.deptno
    group by dname;

30)
select dname dept,min(sal) min,max(sal) max
    from emp,dept
    where emp.deptno=dept.deptno
    group by dname;

31)
