49)
UPDATE emp
SET sal = sal * 1.05
WHERE comm < 1000;


50)
UPDATE emp
SET sal = sal + 100
WHERE sal > (
    SELECT AVG(sal)
    FROM emp e2
    WHERE e2.deptno = emp.deptno
);
select *
from emp;

51)
UPDATE emp
SET sal = sal * 1.01
WHERE sal = (
    SELECT MIN(sal)
    FROM emp
    WHERE deptno = 10
)
AND deptno = 10;


52)
UPDATE emp
SET comm = comm + 10
WHERE deptno=(select deptno from dept where loc = 'NEW YORK');

select *
from emp;
