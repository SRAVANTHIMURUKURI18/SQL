17)
SELECT empno, 
       ename, 
       sal, 
       sal * 1.15 AS increased_salary
FROM emp;


18)
select e1.ename ename,e2.ename mgrname
from emp e1,emp e2
where e1.mgr=e2.empno;



19)
select distinct dname
    from dept,emp
    where emp.deptno=dept.deptno and sal>(select avg(sal)
                                           from emp);

20)
